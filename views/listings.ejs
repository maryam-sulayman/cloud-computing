<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Product Listings â€“ ASP Solutions Ltd</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      font-family: "Segoe UI", sans-serif;
    }

    .navbar {
      background-color: #12121a;
    }

    .navbar-brand {
      color: #fff;
      font-weight: bold;
    }

    .nav-link {
      color: white;
      font-size: 16px;
      font-weight: bold;
      margin-left: 20px;
    }

    .nav-link.active {
      color: #E67E22 !important;
    }

    .listing-container {
      padding-top: 40px;
      margin: 0 auto;
    }

    h2 {
      margin-bottom: 30px;
      text-align: center;
    }

    .card {
      background-color: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 280px;
      color: black;
    }
    
    .card-img-top {
      width: 100%;
      height: 250px;
      object-fit: cover;

    }
    

    .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 50px;
      justify-items: center;
    }
    
    
    .card-body {
      padding: 20px;
    }

    .card-body p {
      margin-bottom: 10px;
    }

    .footer {
      background-color: #12121a;
      text-align: center;
      padding: 15px 0;
      font-size: 14px;
      color: #888;
      margin-top: auto;
    }
    .button {
      border: none;
      border-radius: 2px;
      background-color: rgb(205, 0, 0);
      color: white;
      padding: 8px
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/">ASP Solutions Ltd ðŸ’«</a>
      <div>
        <a class="nav-link d-inline" href="/">Add Product</a>
        <a class="nav-link active d-inline" href="/listings">Listings</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="listing-container">
    <h2>ðŸ“¦ Listed Products</h2>

    <% if (products.length === 0) { %>
      <p class="text-center">No products uploaded yet.</p>
    <% } else { %>
      <div class="justify-content-center grid">
        <% products.forEach(product => { %>
          <div>
            <div class="card">
              <img class="card-img-top" src="<%= product.image_url %>" alt="Product Image" />
              <div class="card-body">
                <p class="card-text"><strong>Name:</strong> <span class="d-block mt-1"><%= product.name %></span></p>
                <p class="card-text"><strong>Description:</strong> <span class="d-block mt-1"><%= product.description %></span></p>
                <p class="card-text"><strong>Type:</strong> <span class="d-block mt-1"><%= product.type %></span></p>
                <div class="d-flex justify-content-between align-items-center">
                <p class="mb-1"><strong class="d-block">Price:</strong> Â£<%= product.price %></p>
                <form action="/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                    <button type="submit" class="button">Delete</button>
                  </form>
                </div>
                
 
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <div class="footer">
    &copy; <%= new Date().getFullYear() %> ASP Solutions Ltd. All rights reserved.
  </div>

</body>
</html>
