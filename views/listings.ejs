<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Product Listings â€“ ASP Solutions Ltd</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      background-color: #1e1e2f;
      color: #f1f1f1;
      font-family: "Segoe UI", sans-serif;
    }

    .navbar {
      background-color: #12121a;
    }

    .navbar-brand {
      color: #fff;
      font-weight: bold;
    }

    .nav-link {
      color: white;
      font-size: 16px;
      font-weight: bold;
      margin-left: 20px;
    }

    .nav-link.active {
      color: #E67E22 !important;
    }

    .listing-container {
      flex: 1;
      padding-top: 40px;
      max-width: 1100px;
      margin: 0 auto;
    }

    h2 {
      color: #fff;
      margin-bottom: 30px;
      text-align: center;
    }

    .card {
      background-color: #2c2c38;
      border: none;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      width: 280px;
      color: #f1f1f1;
    }

    .card-img-top {
      width: 100%;
      height: 200px;
      object-fit: contain;
      background-color: #1e1e2f;
      padding: 10px;
    }

    .card-body {
      padding: 20px;
    }

    .card-body p {
      margin-bottom: 10px;
    }

    .footer {
      background-color: #12121a;
      text-align: center;
      padding: 15px 0;
      font-size: 14px;
      color: #888;
      margin-top: auto;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/">ASP Solutions Ltd ðŸ’«</a>
      <div>
        <a class="nav-link d-inline" href="/">Add Product</a>
        <a class="nav-link active d-inline" href="/listings">Listings</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="listing-container">
    <h2>ðŸ“¦ Product Listings</h2>

    <% if (products.length === 0) { %>
      <p class="text-center">No products uploaded yet.</p>
    <% } else { %>
      <div class="row justify-content-center">
        <% products.forEach(product => { %>
          <div class="col-md-4 d-flex justify-content-center mb-4">
            <div class="card">
              <img class="card-img-top" src="<%= product.image_url %>" alt="Product Image" />
              <div class="card-body">
                <p class="card-text"><strong>Name:</strong> <span class="d-block mt-1"><%= product.name %></span></p>
                <p class="card-text"><strong>Description:</strong> <span class="d-block mt-1"><%= product.description %></span></p>
                <p class="card-text"><strong>Type:</strong> <span class="d-block mt-1"><%= product.type %></span></p>
                <p class="card-text"><strong>Price:</strong> <span class="d-block mt-1">Â£<%= product.price %></span></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <div class="footer">
    &copy; <%= new Date().getFullYear() %> ASP Solutions Ltd. All rights reserved.
  </div>

</body>
</html>
